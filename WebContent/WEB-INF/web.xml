<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>companion</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>secured</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jspf</url-pattern>
    </jsp-property-group>
  </jsp-config>
  <filter>
    <filter-name>UrlRewriteFilter</filter-name>
    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>it3191.companion.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/pages/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>AuthorizationFilter</filter-name>
    <filter-class>it3191.companion.filter.AuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthorizationFilter</filter-name>
    <url-pattern>/pages/admin/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>CSRFGuard</filter-name>
    <filter-class>org.owasp.csrfguard.CsrfGuardFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CSRFGuard</filter-name>
    <url-pattern>/ResourcePublish</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>HtmlCompressorFilter</filter-name>
    <filter-class>it3191.companion.filter.HtmlCompressorFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HtmlCompressorFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <context-param>
    <param-name>registration_successful</param-name>
    <param-value>Registered successfully! Please proceed to login and check your email for your verification link.</param-value>
  </context-param>
  <context-param>
    <param-name>registration_failed</param-name>
    <param-value>Registration Failed! Please try again.</param-value>
  </context-param>
  <context-param>
    <param-name>login_failed</param-name>
    <param-value>Login Failed! Please try again.</param-value>
  </context-param>
  <context-param>
    <param-name>new_session</param-name>
    <param-value>Welcome! Please login.</param-value>
  </context-param>
  <context-param>
    <param-name>logout</param-name>
    <param-value>Log out successfully.</param-value>
  </context-param>
  <context-param>
    <param-name>successfully_update</param-name>
    <param-value>Password Successfully! Updated</param-value>
  </context-param>
  <context-param>
    <param-name>failure_update</param-name>
    <param-value>Update Failure! Please try again</param-value>
  </context-param>
  <context-param>
    <param-name>Owasp.CsrfGuard.Config</param-name>
    <param-value>WEB-INF/csrfguard.properties</param-value>
  </context-param>
  <context-param>
    <param-name>Owasp.CsrfGuard.Config.Print</param-name>
    <param-value>true</param-value>
  </context-param>
  <listener>
    <listener-class>org.owasp.csrfguard.CsrfGuardServletContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.owasp.csrfguard.CsrfGuardHttpSessionListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>JavaScriptServlet</servlet-name>
    <servlet-class>org.owasp.csrfguard.servlet.JavaScriptServlet</servlet-class>
    <init-param>
      <param-name>source-file</param-name>
      <param-value>WEB-INF/csrfguard.js</param-value>
    </init-param>
    <init-param>
      <param-name>inject-into-forms</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>inject-into-attributes</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>domain-strict</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>referer-pattern</param-name>
      <param-value>.*IT3191-2014S1-Grp2-Azure.*</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>JavaScriptServlet</servlet-name>
    <url-pattern>/JavaScriptServlet</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>verification_successful</param-name>
    <param-value>Your Account Is Verified Successfully!</param-value>
  </context-param>
  <context-param>
    <param-name>verification_failure</param-name>
    <param-value>Failure to verify account!</param-value>
  </context-param>
  <context-param>
    <param-name>email_check</param-name>
    <param-value>Wrong email specified!</param-value>
  </context-param>
  <context-param>
    <param-name>security_question</param-name>
    <param-value>Incorrect security question or answer supplied!</param-value>
  </context-param>
  <context-param>
  	<param-name>email_success</param-name>
  	<param-value>Please check your email for the password reset link</param-value>
  </context-param>
</web-app>